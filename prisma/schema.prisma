generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum RangerWeaponCategory {
  ASSULT_RIFLE
  SHOTGUN
  SNIPER_RIFLE
  ROCKET_LAUNCHER
  MISSILE_LAUNCHER
  GRENADE_LAUNCHER
  SPECIAL
  BACKPACK
  VIECHLE
}

model Weapon {
  id           Int            @id @default(autoincrement())
  name         String         @db.VarChar(256)
  level        Int
  RangerWeapon RangerWeapon?
  Drop         Drop[]
}

model RangerWeapon {
  weaponId Int                  @id
  weapon   Weapon               @relation(fields: [weaponId], references: [id])
  category RangerWeaponCategory
}

model Drop {
  id       Int     @id @default(autoincrement())
  mission  Int
  weaponId Int
  weapon   Weapon  @relation(fields: [weaponId], references: [id])
  isNew    Boolean
}
